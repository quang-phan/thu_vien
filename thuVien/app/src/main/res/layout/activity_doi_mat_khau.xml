<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondActivity.doiMatKhau.DoiMatKhauActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="Đổi mật khẩu"
        android:textSize="25dp"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/edMatKhauCu"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="Nhập mật khẩu cũ"/>

    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/edMatKhauMoi"
        android:inputType="textPassword"
        android:layout_below="@id/edMatKhauCu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="Nhập mật khẩu mới"/>

    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/edMatKhauLap"
        android:layout_below="@id/edMatKhauMoi"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="Nhập lại mật khẩu"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDoiMK"
        android:text="Đổi mật khẩu"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:background="@drawable/my_button"
        android:layout_below="@id/edMatKhauLap"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@id/edMatKhauLap"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHuy"
        android:background="@drawable/my_button"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:text="Hủy"
        android:layout_alignBottom="@id/btnDoiMK"
        android:layout_toLeftOf="@id/btnDoiMK"
        android:layout_marginRight="50dp"/>

</RelativeLayout>