<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img"
        android:layout_marginRight="5dp"
        android:src="@drawable/img_book"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTen"
        android:layout_toRightOf="@id/img"
        android:text="Ten sach"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvChuDe"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/tvTen"
        android:text="Chu de sach"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTacGia"
        android:text="Tac gia"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/tvChuDe"
        android:textColor="@color/yellow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSoLuong"
        android:layout_alignParentRight="true"
        android:text="10"/>

</RelativeLayout>